<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/info_registration_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="7dp"
            android:text="Registration Number:"
            android:textSize="15sp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_check_for_trouble_codes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="#D32F2F"
            android:gravity="center"
            android:text="@string/btn_check"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/error_codes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="7dp"
            android:text="Error codes and jobs done:"
            android:textSize="25sp"
            android:textAlignment="center"/>

        <ListView
            android:id="@+id/trouble_codes_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>